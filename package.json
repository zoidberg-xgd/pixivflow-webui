{
  "name": "pixivflow-webui",
  "version": "1.0.0",
  "type": "module",
  "description": "PixivFlow WebUI Frontend",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
    "electron:dev": "NODE_ENV=development electron electron/main.cjs",
    "electron:build": "npm run build:all && electron-builder",
    "electron:build:win": "npm run build:all && electron-builder --win",
    "electron:build:mac": "npm run build:all && electron-builder --mac --arm64",
    "electron:build:linux": "npm run build:all && electron-builder --linux",
    "build:all": "npm run build",
    "electron:build:mac:verbose": "bash build-electron.sh",
    "electron:build:mac:simple": "bash build-electron-simple.sh",
    "electron:build:mac:enhanced": "node build-electron-enhanced.cjs",
    "electron:check": "bash check-build-env.sh",
    "electron:pack": "npm run build && electron-builder --dir",
    "android:init": "npm run build && npx cap add android",
    "android:sync": "npm run build && npx cap sync android",
    "android:open": "npx cap open android",
    "android:build": "npm run build && npx cap sync android && cd android && ./gradlew assembleRelease",
    "android:build:debug": "npm run build && npx cap sync android && cd android && ./gradlew assembleDebug",
    "ios:sync": "npm run build && npx cap sync ios",
    "ios:open": "npx cap open ios",
    "mobile:sync": "npm run build && npx cap sync"
  },
  "main": "electron/main.cjs",
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "@tanstack/react-query": "^5.12.0",
    "antd": "^5.12.0",
    "axios": "^1.6.2",
    "dayjs": "^1.11.19",
    "i18next": "^25.6.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "puppeteer-core": "^24.29.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.2.4",
    "react-router-dom": "^6.20.0",
    "socket.io-client": "^4.6.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.3",
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^24.10.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^5.1.0",
    "electron": "^39.1.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.56.1",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^7.2.2"
  },
  "overrides": {
    "glob": "^10.3.10"
  }
}
